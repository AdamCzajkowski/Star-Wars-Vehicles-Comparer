<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.StarWarsVehiclesComparer.BottomSheetRounded" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.StarWarsVehiclesComparer.Category" parent="Theme.StarWarsVehiclesComparer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:background">@drawable/background_category_separator</item>
    </style>

    <style name="Theme.StarWarsVehiclesComparer.Item" parent="Theme.StarWarsVehiclesComparer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:background">@drawable/background_category_separator</item>
    </style>
</resources>