<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/starship_dialog_recycler_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black_10">

    <TextView
        android:id="@+id/starship_dialog_recycler_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="@string/text_button_select_vehicles"
        android:textColor="@color/white_90"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/starship_dialog_recycler_item_radio_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Deathstar very very very very very very looong name" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/starship_dialog_recycler_item_radio_button"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:buttonTint="@color/white_90"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>